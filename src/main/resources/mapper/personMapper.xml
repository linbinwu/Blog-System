<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lin.person.mapper.PersonMapper">
    <resultMap id="personResult" type="com.lin.person.bean.Person">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="isDelete" column="is_delete"/>
    </resultMap>
    <select id="selectAllPerson" resultMap="personResult">
        select * from person
    </select>
    <insert id="insertPerson" parameterType="com.lin.person.bean.Person">
        insert person (name) value (#{person.name})
    </insert>
</mapper>